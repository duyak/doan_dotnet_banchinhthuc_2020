<!-- Form Register-->
<hr />
<section class="cart_area">
    <div class="container">
        @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
        {
            if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    <strong>Success!: </strong>@ViewBag.Message
                </div>
            }
        }
        else
        {

            using (Html.BeginForm("Register", "MyUser", FormMethod.Post))

            {
                @Html.AntiForgeryToken()
                <div class="cart_inner">
                    <div class="table-responsive" style="width: 500px; margin: auto;">
                        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Register</h1>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @*<label for="exampleInputEmail1">Username</label>*@
                            @*<input type="text" class="form-control" id="exampleInputEmail1" placeholder="">*@


                            @Html.LabelFor(model => model.username)<br />
                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            @*<label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="">*@
                            @Html.LabelFor(model => model.password)<br />
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            @Html.ValidationMessage("EmailExist", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @*<label for="exampleInputEmail2">Email</label>
                                <input type="email" class="form-control" id="exampleInputEmail2" placeholder="">*@
                            @Html.LabelFor(model => model.email)<br />
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @*<label for="exampleInputEmail3">Fullname</label>
                                <input type="text" class="form-control" id="exampleInputEmail3" placeholder="">*@
                            @Html.LabelFor(model => model.name)<br />
                            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group">
                            <button type="submit" class="btn btn-success" style="width: 100%;">Submit</button>
                        </div>

                    </div>
                </div>

                if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger">
                        <strong>Error! :</strong>@ViewBag.Message
                    </div>
                }
            }

        }






    </div>
</section> <!--============== End form Register===========-->
