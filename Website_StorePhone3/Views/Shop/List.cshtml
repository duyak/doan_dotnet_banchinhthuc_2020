
@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_layoutShop.cshtml";
    List<Website_StorePhone3.Models.db.product> l = ViewBag.ListPro;
    double tongsopage = ViewBag.tongsopage;
}
