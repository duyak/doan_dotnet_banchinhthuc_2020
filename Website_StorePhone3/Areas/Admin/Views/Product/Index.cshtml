
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
    int count = 1;
    List<Website_StorePhone3.Models.db.product> products = ViewBag.products;
}


<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="index.html">Trang chủ</a>
                </li>

                <li>
                    <a href="index.html">Quản lý sản phẩm</a>
                </li>
                <li class="active">Thông tin sản phẩm</li>
            </ul><!-- /.breadcrumb -->

            <div class="nav-search" id="nav-search">
                <form class="form-search">
                    <span class="input-icon">
                        <input type="text" placeholder="Search ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
                        <i class="ace-icon fa fa-search nav-search-icon"></i>
                    </span>
                </form>
            </div><!-- /.nav-search -->
        </div>

        <div class="page-content">


            <div class="page-header">
                <h1>
                    Nhà sản phẩm
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Thông tin các sản phẩm
                    </small>
                </h1>
            </div><!-- /.page-header -->

            <div class="row">
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->

                    <div class="row">
                        <div class="col-xs-12">

                            <!-- div.table-responsive -->
                            <!-- div.dataTables_borderWrap -->
                            <div>
                                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            @* <th class="center">
                                                    <label class="pos-rel">
                                                        <input type="checkbox" class="ace" />
                                                        <span class="lbl"></span>
                                                    </label>
                                                </th>*@
                                            <th>STT</th>
                                            <th>Ảnh đại diện</th>
                                            <th>Tên sản phẩm</th>
                                            <th>Nhà sản xuất</th>
                                            <th>Danh mục</th>

                                            @*<th>
                                                    <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                                                    Hiện thị
                                                </th>
                                            *@

                                            <th>Tác vụ</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @for (int i = 0; i < products.Count; i++)
                                        {
                                            if (products[i].activeFlag == 1)
                                            {




                                                <!--                                        Dòng thứ nhất-->
                                                <tr>


                                                    <td>@(i+1)</td>
                                                    <td><img style="max-height:60px" src="~/Content/client/img/product/@products[i].imgMain" alt="@products[i].name" /></td>
                                                    <td class="hidden-480">@products[i].name</td>
                                                    <td>@products[i].brand.name</td>
                                                    <td>@products[i].category.name</td>
                                                    <!--                                            <td>Thành viên</td>-->


                                                    <td>
                                                        <div class="hidden-sm hidden-xs action-buttons">

                                                            <a class="green" href="@Url.Action("Edit/"+@products[i].id)">
                                                                <i class="ace-icon fa fa-pencil bigger-130"></i>
                                                            </a>
                                                            @*  @Html.ActionLink("Edit", "Edit", new { id = item.id })*@

                                                            <a class="red" href="@Url.Action("Delete/"+@products[i].id)" onclick="return confirm('Bạn chắc chắn xóa? '+'@products[i].name');">
                                                                <i class="ace-icon fa fa-trash-o bigger-130"></i>

                                                            </a>

                                                            <a class="blue" href="@Url.Action("productDetailList","AdminProductDetail",new {productId = products[i].id })">
                                                                <i class="ace-icon fa fa-info-circle bigger-130"></i>

                                                            </a>
                                                            @*@Html.ActionLink("Delete", "Delete", new { id = item.id})*@

                                                        </div>


                                                    </td>
                                                </tr>


                                            }

                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.page-content -->
    </div>
</div><!-- /.main-content -->
<!-- inline scripts related to this page -->
<script type="text/javascript">
    $(document).ready(function () {
        $('#dynamic-table').DataTable();
    });

</script>





